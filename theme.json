{
    "$schema": "https://schemas.wp.org/trunk/theme.json", 
	"version": 2,
	"patterns": [
		"three-columns-of-services",
		"clients-section"
	],
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                {
					"color": "#ffffff",
					"name": "Background",
					"slug": "background"
				},
                {
                    "color": "#282828",
                    "name": "Title",
                    "slug": "title"
                },
                {
					"color": "#888888",
					"name": "Text",
					"slug": "text"
				},
                {
                    "color": "#DC9814",
                    "name": "Links",
                    "slug": "links"
                },
                {
                    "color": "#eeeeee",
                    "name": "Line",
                    "slug": "line"
                },
                {
                    "color": "#f7f7f7",
                    "name": "Background comments",
                    "slug": "background-comments"
                }
            ]
        },
        "layout": {
            "contentSize": "803px",
            "wideSize": "921px"
        },
        "typography": {
            "fluid": false,
            "fontFamilies": [
                {
                    "fontFace": [
                        {
							"fontFamily": "Roboto",
							"fontStyle": "normal",
							"fontWeight": "300",
							"src": ["file:./assets/fonts/Roboto/roboto-v30-latin-300.woff2"]
						},
                        {
							"fontFamily": "Roboto",
							"fontStyle": "italic",
							"fontWeight": "300",
							"src": ["file:./assets/fonts/Roboto/roboto-v30-latin-300italic.woff2"]
						},
                        {
							"fontFamily": "Roboto",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": ["file:./assets/fonts/Roboto/roboto-v30-latin-regular.woff2"]
						},
                        {
							"fontFamily": "Roboto",
							"fontStyle": "italic",
							"fontWeight": "400",
							"src": ["file:./assets/fonts/Roboto/roboto-v30-latin-italic.woff2"]
						},
                        {
							"fontFamily": "Roboto",
							"fontStyle": "normal",
							"fontWeight": "500",
							"src": ["file:./assets/fonts/Roboto/roboto-v30-latin-500.woff2"]
						},
                        {
							"fontFamily": "Roboto",
							"fontStyle": "italic",
							"fontWeight": "500",
							"src": ["file:./assets/fonts/Roboto/roboto-v30-latin-500italic.woff2"]
						},
                        {
							"fontFamily": "Roboto",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": ["file:./assets/fonts/Roboto/roboto-v30-latin-700.woff2"]
						},
                        {
							"fontFamily": "Roboto",
							"fontStyle": "italic",
							"fontWeight": "700",
							"src": ["file:./assets/fonts/Roboto/roboto-v30-latin-700italic.woff2"]
						}
                    ],
                    "fontFamily": "\"Roboto\", sans-serif",
					"name": "Inter",
					"slug": "body"
                },
                {
					"fontFamily": "roboto, noto, arial, sans-serif",
					"name": "System Sans-serif",
					"slug": "system-sans-serif"
				}
            ],
            "fontSizes": [
				{
					"fluid": false,
					"name": "Small",
					"size": "0.9rem",
					"slug": "small"
				},
				{
					"fluid": false,
					"name": "Medium",
					"size": "1.05rem",
					"slug": "medium"
				},
				{
					"fluid": {
						"min": "1.39rem",
						"max": "1.85rem"
					},
					"name": "Large",
					"size": "1.4rem",
					"slug": "large"
				},
				{
					"fluid": {
						"min": "1.85rem",
						"max": "2.5rem"
					},
					"name": "Extra Large",
					"size": "1.85rem",
					"slug": "x-large"
				},
				{
					"fluid": {
						"min": "2.5rem",
						"max": "3.27rem"
					},
					"name": "Extra Extra Large",
					"size": "3.27rem",
					"slug": "xx-large"
				}
			]
        }
    },
    "styles": {
        "color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--text)"
		},
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--body)",
            "fontSize": "var(--wp--preset--font-size--medium)",
			"fontStyle": "normal",
			"fontWeight": "400",
			"lineHeight": "1.6"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)"
                }
            },
            "heading": {
                "color": {
                    "text": "var(--wp--preset--color--title)"
                },
                "typography": {
                    "fontWeight": "400",
                    "lineHeight": "1.2"
                }
            },
            "link": {
                ":any-link": {
                    "typography": {
                        "textDecoration": "none"
                    }
                },
				":hover": {
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"outline": {
						"offset": "0",
						"width": "0",
						"style": "solid"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--links)"
				}
			}
        },
        "blocks": {
            "core/quote": {
				"border": {
					"radius": "var(--wp--preset--spacing--20)"
				},
				"color": {
					"background": "var(--wp--preset--color--background)"
				},
				"css": "& :where(p) {margin-block-start:0;margin-block-end:calc(var(--wp--preset--spacing--10) + 0.5rem);} & :where(:last-child) {margin-block-end:0;} &.has-text-align-right.is-style-plain, .rtl .is-style-plain.wp-block-quote:not(.has-text-align-center):not(.has-text-align-left){border-width: 0 2px 0 0;padding-left:calc(var(--wp--preset--spacing--20) + 0.5rem);padding-right:calc(var(--wp--preset--spacing--20) + 0.5rem);} &.has-text-align-left.is-style-plain, body:not(.rtl) .is-style-plain.wp-block-quote:not(.has-text-align-center):not(.has-text-align-right){border-width: 0 0 0 2px;padding-left:calc(var(--wp--preset--spacing--20) + 0.5rem);padding-right:calc(var(--wp--preset--spacing--20) + 0.5rem)}",
				"elements": {
					"cite": {
						"typography": {
							"fontFamily": "var(--wp--preset--font-family--body)",
							"fontSize": "var(--wp--preset--font-size--small)",
							"fontStyle": "normal"
						}
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontStyle": "normal",
					"lineHeight": "1.4"
				},
				"variations": {
					"plain": {
						"border": {
							"color": "var(--wp--preset--color--contrast)",
							"radius": "0",
							"style": "solid",
							"width": "0"
						},
						"color": {
							"background": "transparent"
						},
						"spacing": {
							"padding": {
								"bottom": "var(--wp--preset--spacing--20)",
								"left": "var(--wp--preset--spacing--20)",
								"right": "var(--wp--preset--spacing--20)",
								"top": "var(--wp--preset--spacing--20)"
							}
						},
						"typography": {
							"fontFamily": "var(--wp--preset--font-family--body)",
							"fontStyle": "normal",
							"fontSize": "var(--wp--preset--font-size--large)",
							"lineHeight": "1.4"
						}
					}
				}
			}
        }
    }
}